<h2>New User</h2>

<%= form_for @user do |f| %>
	<%= f.label :username %> 
	<%= f.text_field :username %> 
	<br>

	<%= f.label :alias %>
	<%= f.text_field :alias %>
	<br> 

	<%= f.label :password %>
	<%= f.password_field :password %>
	<br>

	<%= f.label :password_conformation %>
	<%= f.password_field :password_conformation %>
	<br>

	<%= f.submit 'Sign Up' %> 
	
<% end %> 
